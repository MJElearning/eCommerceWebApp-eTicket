@model IEnumerable<Actor>

@{ 
    ViewData["Title"] = "List of actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.ProfileURL)</th>
                    <th>@Html.DisplayNameFor(m => m.ActorName)</th>
                    <th>@Html.DisplayNameFor(m => m.ActorBio)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
	{
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ProfileURL" alt="@item.ActorName" style="max-width:120px;" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.ActorName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.ActorBio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
	}
            </tbody>
        </table>
    </div>
</div>